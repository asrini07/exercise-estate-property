        <record model="ir.ui.view" id="estate_property_offer_tree_view" >
            <field name="name">Estate Property Offer Tree</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <tree string="Estate Properties offer" decoration-danger="status == 'refused'" decoration-success="status == 'accepted'">
                    <field name="property_id"/>
                    <field name="partner_id"/>
                    <field name="price"/>
                    <field name="property_type_id"/>
                    <field name="validity" />
                    <field name="date_deadline" />
                    <button name="action_accept" invisible="status in('accepted', 'refused')" type="object" icon="fa-check" title="Accept Offer"/>
                    <button name="action_refuse" invisible="status in('accepted', 'refused')" type="object" icon="fa-times" title="Refuse Offer"/>
                    <!-- <button icon="fa-check" type="object" invisible="status in('accepted', 'refused')" name="action_accept" class="oe_highlight"/>
                    <button icon="fa-cancel" type="object" invisible="status in('accepted', 'refused')" name="action_cancel" class="btn-danger"/> -->
                    <field name="status"/>
                </tree>
            </field>
        </record>


